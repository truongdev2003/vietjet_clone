  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-set appropriate token based on request path",
          "const requestUrl = pm.request.url.toString();",
          "if (requestUrl.includes('/admin/')) {",
          "    pm.request.headers.upsert({",
          "        key: 'Authorization',",
          "        value: 'Bearer ' + pm.collectionVariables.get('adminToken')",
          "    });",
          "} else if (requestUrl.includes('/auth/') && !requestUrl.includes('/auth/login') && !requestUrl.includes('/auth/register')) {",
          "    pm.request.headers.upsert({",
          "        key: 'Authorization',",
          "        value: 'Bearer ' + pm.collectionVariables.get('accessToken')",
          "    });",
          "}"
        ]
      }
    }
  ],
