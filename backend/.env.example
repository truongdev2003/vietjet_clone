# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vietjet_clone

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-at-least-32-characters-long
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-at-least-32-characters-long
JWT_REFRESH_EXPIRE=30d
JWT_COOKIE_EXPIRE=7

# Email Configuration (for password reset, verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@vietjet.com

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production

# External APIs
PAYMENT_GATEWAY_URL=https://api.payment-gateway.com
PAYMENT_GATEWAY_KEY=your-payment-gateway-key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API Keys (comma separated)
VALID_API_KEYS=key1,key2,key3